{
  "name": "actiongetcurrentpr",
  "version": "4.0.0",
  "description": "Github Action for getting the current PR if the commit belongs to one",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/8BitJonny/gh-get-current-pr.git"
  },
  "keywords": [
    "Github",
    "Action",
    "Javascript"
  ],
  "author": "8BitJonny",
  "license": "SEE LICENSE IN LICENSE file",
  "bugs": {
    "url": "https://github.com/8BitJonny/gh-get-current-pr/issues"
  },
  "homepage": "https://github.com/8BitJonny/gh-get-current-pr#readme",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^6.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@typescript-eslint/parser": "^8.47.0",
    "@vercel/ncc": "^0.38.4",
    "eslint": "^8.45.0",
    "eslint-plugin-github": "^6.0.0",
    "eslint-plugin-jest": "^29.2.1",
    "jest": "^30.2.0",
    "js-yaml": "^4.1.1",
    "prettier": "3.6.2",
    "ts-jest": "^29.4.5",
    "typescript": "^5.9.3"
  }
}
